<div id="calc">
<% num1=Math.round(Math.random*100) %>
<% num2=Math.round(Math.random*100) %>
<%  if(num1===num2){ %>
    <h1 class="luck-text">
      Congratulations you will get  discount on your Next order
      </h1>
      <style>
        #calc{
        background-image:url("https://images.pexels.com/photos/1648374/pexels-photo-1648374.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940");
        background-size:100%;
      }
      </style>
      <% } %>
<% if(num1!==num2){ %>
  <style>
    #calc{
    background-image:url("https://images.pexels.com/photos/47090/baby-tears-small-child-sad-47090.jpeg?auto=compress&cs=tinysrgb&dpr=3&h=750&w=1260");}
  </style>
      <h1 class="luck-text">Better Luck next time</h1> %>
      <% } %>
</div>

        <!-- Footer -->

        <footer id="footer">
          <a href="https://www.instagram.com/"><i class="lni lni-instagram logo"></i> </a>
